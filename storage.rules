rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isValidImageFile() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
    
    function isValidDocumentFile() {
      return request.resource.contentType in ['application/pdf', 'image/jpeg', 'image/png'] &&
             request.resource.size < 20 * 1024 * 1024; // 20MB limit
    }
    
    // User profile pictures
    match /users/{userId}/profile/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                  isOwner(userId) && 
                  isValidImageFile();
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Pregnancy photos/ultrasounds
    match /users/{userId}/pregnancy/{pregnancyId}/{fileName} {
      allow read, write: if isAuthenticated() && 
                        isOwner(userId) && 
                        isValidImageFile();
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Medical documents
    match /users/{userId}/medical/{fileName} {
      allow read, write: if isAuthenticated() && 
                        isOwner(userId) && 
                        isValidDocumentFile() &&
                        // Additional security: require email verification for medical docs
                        request.auth.token.email_verified == true;
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Public content (articles, educational materials)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only admin can upload public content
    }
    
    // Chat/community images
    match /community/{messageId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                  isValidImageFile();
      allow delete: if false; // Prevent deletion of community content
    }
    
    // Default deny all other files
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
